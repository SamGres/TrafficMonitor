<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:id="@+id/Mojaapp"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".ListDogodki">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="true"
            app:elevation="0dp"
            app:fabSize="normal"
            app:borderWidth="0dp"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="-1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:text="Nastavitve"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="45sp" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorPrimary"
                            android:text="Elektronski naslov"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/editTextElektronskaPosta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:hint="email"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/naslov2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@color/colorPrimary"
                            android:text="Ime in priimek"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"

                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/editText6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:hint="Klemn Grebovsek"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/asdasdasdasd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@color/colorPrimary"
                            android:text="Kontakt"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/editText12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:hint="031454231"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center" />


                        <TextView
                            android:id="@+id/naslov4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@color/colorPrimary"
                            android:text="Geslo"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />

                        <EditText
                            android:id="@+id/edit123"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:hint="Novo geslo"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center" />


                        <EditText
                            android:id="@+id/editText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="20dp"
                            android:ems="10"
                            android:hint="Ponovi geslo"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textAlignment="center" />


                        <Button
                            android:id="@+id/btnGeslo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorPrimary"
                            android:text="Shrani spremembe"
                            android:textColor="#ffffff"
                            android:textSize="24dp" />

                </LinearLayout>
        </ScrollView>
</RelativeLayout>